@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-w3layouts wrapper">
	<div class="main-agileinfo">
		<div class="agileits-top">
			<form asp-action="Login" asp-Controller="Account" method="post">
				<div asp-validation-summary="ModelOnly"></div>
				
				<input asp-for="Email" placeholder="Email">
				<span asp-validation-for="Email" class="text-danger"></span>
				<br />
				<input asp-for="Password" placeholder="Password">
				<span asp-validation-for="Password" class="text-danger"></span>
				<br />
				
				<div class="wthree-text">
					<label class="anim">
						<input asp-for="RememberMe" class="RememberMe">
						<span>Remember ME</span>
					</label>
					<div class="clear"> </div>
				</div>
				<input type="submit" value="SIGNIN">
				<p class=""><a asp-action="GoogleLogin">Login With Google</a></p>
			</form>
			<p>Don`t Have An Account? <a asp-action="Register"> Register Now!</a></p>

			<p> <a asp-action="ForgetPassword"> Forget Password !</a></p>

		</div>
	</div>
				
</div>

